<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="10dp">
    <LinearLayout
        android:id="@+id/ll_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    <TextView
        android:id="@+id/tv_item_team_members"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/suitebold"
        tools:text="김숭실"
        android:background="@drawable/bg_home_team_members"
        android:gravity="center"
        android:textSize="18dp"        />

    <ImageView
        android:id="@+id/iv_leader"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginStart="10dp"
        android:src="@drawable/ic_leader_crown"
        app:layout_constraintStart_toStartOf="@+id/tv_item_team_members"
        app:layout_constraintTop_toTopOf="@+id/tv_item_team_members"
        app:layout_constraintBottom_toBottomOf="@+id/tv_item_team_members"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>