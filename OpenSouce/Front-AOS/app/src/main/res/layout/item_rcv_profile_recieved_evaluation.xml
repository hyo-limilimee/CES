<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="22dp">

    <FrameLayout
        android:id="@+id/fl_ic_profile_people"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="27dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ic_profile_people"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_profile_people" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/ll_profile_evaluation_comment_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/fl_ic_profile_people"
        android:layout_marginTop="12dp"
        android:layout_marginStart="5dp">

        <TextView
            android:id="@+id/tv_profile_evaluation_comment_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/suiteregular"
            android:text="8"
            android:textColor="@color/black"
            android:textSize="22dp"
            android:textStyle="bold" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/fl_ic_profile_evaluation_comment_gray_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/ll_profile_evaluation_comment_num"
        android:layout_marginStart="10dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ic_profile_evaluation_comment_gray_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_profile_evaluation_comment_gray_btn" />

        <TextView
            android:id="@+id/tv_profile_evaluation_subject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/suiteregular"
            android:text="약속시간을 잘 지켜요"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:textStyle="bold" />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>