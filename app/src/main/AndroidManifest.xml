<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".data.remote.MyApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Bilda"
        tools:targetApi="31">
        <activity
            android:name=".presentation.sign.TermsOfPrivacyActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.sign.TermsOfUseActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.BnvActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.sign.SignInActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.sign.MyInfoInputActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.sign.PwInputActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.sign.EmailInputActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.sign.TermsActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>